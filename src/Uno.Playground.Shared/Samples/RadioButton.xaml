<UserControl x:Class="Uno.UI.Demo.Samples.RadioButton"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:Uno.UI.Demo.Samples"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<ScrollViewer>
		<StackPanel Style="{StaticResource SamplePanelStyle}">

			<TextBlock Style="{StaticResource SampleSectionTextBlockStyle}"
					   Text="Normal" />
			
			<RadioButton GroupName="Enabled"
						 Content="RadioButton 1"
						 IsChecked="True"
						 x:Name="RadioButton1"/>
			
			<RadioButton GroupName="Enabled"
						 Content="RadioButton 2"
						 x:Name="RadioButton2"/>
			
			<RadioButton GroupName="Enabled"
						 Content="RadioButton 3"
						 x:Name="RadioButton3"/>

			<TextBlock Style="{StaticResource SampleSectionTextBlockStyle}"
					   Text="Disabled" />
			
			<RadioButton GroupName="Disabled"
						 IsEnabled="False"
						 IsHitTestVisible="False"
						 Content="RadioButton 1"
						 x:Name="RadioButto4"
						 IsChecked="True" />
			
			<RadioButton GroupName="Disabled"
						 IsEnabled="False"
						 IsHitTestVisible="False"
						 Content="RadioButton 2"
						 x:Name="RadioButton5"/>
			
			<RadioButton GroupName="Disabled"
						 IsEnabled="False"
						 IsHitTestVisible="False"
						 Content="RadioButton 3"
						 x:Name="RadioButton6"/>

		</StackPanel>
	</ScrollViewer>
</UserControl>
